{
  "name": "monorepo-root",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.7.0",
  "description": "Root for the TypeScript pnpm workspace",
  "scripts": {
    "clean": "rm -rf .pnpm && find . -name tsconfig.tsbuildinfo -type f -exec rm -f {} + && find . -name node_modules -type d -prune -exec rm -rf {} + && find . -name dist -type d -prune -exec rm -rf {} + && find . -name dist-test -type d -prune -exec rm -rf {} + && echo \"Workspace cleaned.\"",
    "build": "pnpm recursive run build",
    "build:sequential": "pnpm recursive run --sort --workspace-concurrency=1 build",
    "test": "NODE_OPTIONS=\"--import tsx --no-deprecation --no-warnings\" mocha --require tsx --require mocha-suppress-logs --config .mocharc.json 'test/**/*.test.ts'",
    "test:lending-agent": "NODE_OPTIONS=\"--import tsx --no-deprecation --no-warnings\" mocha --require tsx --require mocha-suppress-logs 'test/lending-agent-no-wallet.test.ts'",
    "format": "prettier --write \"./{src,test}/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"./{src,test}/**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@emberai/sdk-typescript": "^0.3.0-beta.4",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "mocha": "^10.2.0",
    "mocha-suppress-logs": "^0.5.1",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "why-is-node-running": "^3.2.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "ethers": "^5.7.2",
    "zod": "^3.25.7"
  }
}
