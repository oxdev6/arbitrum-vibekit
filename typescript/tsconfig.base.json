{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* If NOT transpiling with TypeScript */
    // "moduleResolution": "Bundler",
    // "module": "ESNext",
    // "noEmit": true,

    /* If transpiling with TypeScript */
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    /* Path resolution */
    "baseUrl": "./",

    /* Lib */
    "lib": [
      "es2022"
      // "dom", // Uncomment if you need DOM types (e.g., for frontend)
      // "dom.iterable" // Uncomment if you need DOM iterable types
    ]
  }
}
